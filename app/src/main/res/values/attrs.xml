<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--用于tab中未选择时字体颜色-->
    <attr name="colorAccentLight" format="color" />

    <declare-styleable name="TabLayout">
        <attr name="indicator_height" format="dimension" />
        <attr name="indicator_color" format="color" />
        <attr name="center_align" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ParallaxViewPager">
        <attr name="mode">
            <enum name="left_overlay" value="0" />
            <enum name="right_overlay" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="outset" format="fraction|dimension" />
        <attr name="interpolator" format="reference" />
        <attr name="shadow_width" format="dimension" />
        <attr name="left_shadow" format="reference" />
        <attr name="right_shadow" format="reference" />
    </declare-styleable>

    <declare-styleable name="SubmitButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonColor" format="color" />
        <attr name="succeedColor" format="color" />
        <attr name="failedColor" format="color" />
        <attr name="buttonTextSize" format="dimension" />
        <attr name="progressStyle" format="enum">
            <enum name="loading" value="0" />
            <enum name="progress" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TextFieldBoxes">
        <!--Texts-->
        <attr name="labelText" format="string" />
        <attr name="helperText" format="string" />
        <!--Colors-->
        <attr name="helperTextColor" format="color" />
        <attr name="counterTextColor" format="color" />
        <attr name="errorColor" format="color" />
        <attr name="primaryColor" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="panelBackgroundColor" format="color" />
        <!--Characters counter-->
        <attr name="maxCharacters" format="integer" />
        <attr name="minCharacters" format="integer" />
        <!--Others-->
        <attr name="enabled" format="boolean" />
        <attr name="iconSignifier" format="reference" />
        <attr name="endIcon" format="reference" />
        <attr name="isResponsiveIconColor" format="boolean" />
        <attr name="hasClearButton" format="boolean" />
        <attr name="hasFocus" format="boolean" />
        <attr name="alwaysShowHint" format="boolean" />
        <attr name="useDenseSpacing" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ExtendedEditText">
        <!--Texts-->
        <attr name="prefix" format="string" />
        <attr name="suffix" format="string" />
        <!--Colors-->
        <attr name="prefixTextColor" format="color" />
        <attr name="suffixTextColor" format="color" />
    </declare-styleable>


</resources>