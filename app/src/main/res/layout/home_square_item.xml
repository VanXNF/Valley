<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/avatar_square"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    app:roundAsCircle="true"
                    app:placeholderImage="@drawable/ic_favorite_red"/>

                <TextView
                    android:id="@+id/name_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Member"
                    android:textColor="?attr/colorAccent"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/member_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_medal"
                    android:visibility="gone"/>

            </LinearLayout>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/display_image_square"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_below="@id/linear_layout"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                app:placeholderImage="@drawable/ic_favorite_red"
                app:fadeDuration="800"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/display_image_square"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/action_like_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/ic_favorite_border"/>
                <ImageView
                    android:id="@+id/action_comment_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/ic_comment_dark"/>
                <ImageView
                    android:id="@+id/action_share_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/ic_share_dark"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>